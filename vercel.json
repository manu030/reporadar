{
  "version": 2,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "functions": {
    "pages/api/cron/daily.js": {
      "maxDuration": 300
    }
  },
  "env": {
    "OPENAI_API_KEY": "@openai_api_key",
    "RESEND_API_KEY": "@resend_api_key", 
    "RESEND_FROM_EMAIL": "@resend_from_email",
    "NEXT_PUBLIC_BASE_URL": "@next_public_base_url"
  },
  "crons": [
    {
      "path": "/api/cron/daily",
      "schedule": "0 4 * * 1,3,6"
    }
  ]
}